public int diff21(int n) {
    // Check if the given number n is less than or equal to 21
    if (n <= 21) {
        // If n is less than or equal to 21, return the difference between 21 and n
        return 21 - n;
    } else {
        // If n is greater than 21, calculate the difference between n and 21, then double it
        return (n - 21) * 2;
    }
}
